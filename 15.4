#include <iostream>
#include <cmath>
using namespace std;
int main()
{

	int n,k,h;
	double min, max;
	cin >> n;
	double* a = new double[n];
	for (int i = 0; i < n; i++)
	{
		cout <<i << "         ";
		cin >> a[i];
		cout << endl;
	}
	cout << endl;

	for (int i = 0; i < n; i++)
	{

		cout << a[i] << "\t";

	}
	cout << endl;
	min = a[0];
	max = a[0];
	h = 0;
	k = 0;

	for (int i = 0; i < n; i++)
	{
		if (min > a[i])
		{
			min = a[i];
			h = i;
		}
		if (max < a[i])
		{
			max = a[i];
			k = i;
		}
	}
	cout << endl;
	if (h < k)
	{
		for (int i = h+1; i < k; i++)
		{

			a[i] = 0;

		}
	}
	else
	{
		for (int i = k + 1; i < h; i++)
		{
			a[i] = 0;

		}
	}
	cout << endl;
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << "\t";
	}

}
